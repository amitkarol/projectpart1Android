<resources>
    <!-- Base application theme for Day mode -->
    <style name="DayTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>

    <!-- Base application theme for Night mode -->
    <style name="NightTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/darkBackground</item>
    </style>

    <style name="AlwaysWhiteBackground">
        <item name="android:background">@color/constant_white</item>
    </style>

    <style name="CircularImageView" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="RedButton">
        <item name="android:backgroundTint">@color/custom_red</item>
    </style>
</resources>
