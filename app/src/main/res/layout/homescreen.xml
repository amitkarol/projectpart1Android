<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homescreen">

    <!-- Top Bar -->

    <!-- Search View -->

    <!-- SwipeRefreshLayout and ViewPager2 for swiping videos -->

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="183dp" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/searchView"
        android:layout_above="@id/bottomNavigation"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewVideos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:clipToPadding="false"
            android:scrollbars="vertical" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- YouTube Photo -->
    <ImageView
        android:id="@+id/imageViewYouTube"
        android:layout_width="92dp"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/youtube2" />

    <!-- Thumbnail Image View -->

    <!-- Bottom Navigation -->

    <RelativeLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:padding="8dp">

        <ImageView
            android:id="@+id/imageViewHome"
            android:layout_width="50dp"
            android:layout_height="43dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:src="@drawable/home_filled_svgrepo_com" />

        <ImageView
            android:id="@+id/imageViewLightning"
            android:layout_width="50dp"
            android:layout_height="43dp"
            android:layout_toEndOf="@id/imageViewHome"
            android:layout_marginStart="16dp"
            android:src="@drawable/lightning_1_svgrepo_com" />

        <Button
            android:id="@+id/buttonUpload"
            android:layout_width="62dp"
            android:layout_height="53dp"
            android:layout_toEndOf="@id/imageViewLightning"
            android:layout_marginStart="16dp"
            android:background="@drawable/plus_circle_svgrepo_com"
            android:text="" />

        <ImageView
            android:id="@+id/imageViewPlay"
            android:layout_width="50dp"
            android:layout_height="43dp"
            android:layout_toEndOf="@id/buttonUpload"
            android:layout_marginStart="16dp"
            android:src="@drawable/play1_svgrepo_com" />

        <ImageView
            android:id="@+id/imageViewPerson"
            android:layout_width="46dp"
            android:layout_height="38dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:src="@drawable/person_button_svgrepo_com" />
    </RelativeLayout>

    <!-- Switch Mode -->

</RelativeLayout>
